<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_list">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rut_lv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:paddingTop="@dimen/padding_list"
            android:paddingLeft="@dimen/padding_list"/>
        <TextView
            android:id="@+id/fecha_lv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:paddingLeft="@dimen/padding_list"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/nombre_completo_lv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tamanio_list"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="2"/>
    <ImageView
        android:id="@+id/img_lv_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanio_imagen"
        android:layout_weight="5"/>

</LinearLayout>